
@{
    ViewBag.Title = "EditUser";
}
@section scripts{
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Js/EditUser.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls-1.3.2.js"></script>
    <script src="~/Scripts/angular-locale_zh-cn.js"></script>
    <script src="~/Scripts/angular-file-upload.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
}
<div>
    <a href="/User/index" class="btn" style="float:right;font-size:20px;">放弃修改</a>
    <h1>编辑用户</h1>
</div>
<hr />
<div ng-app="editApp" ng-controller="userCtrl" style="height:700px;margin-right:auto;margin-top:auto;margin-bottom:auto;">
    <div style="height:400px;width:400px;margin-left:auto;margin-right:auto;margin-top:100px;margin-bottom:auto;">
        <form class="form-horizontal" name="myForm">
            <div class="form-group">
                <label class="col-sm-2 control-label">姓名:</label>
                <div class="col-sm-10" style="width:325px;">
                    <input type="text" class="form-control" ng-model="Name" placeholder="姓名">
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="col-sm-2 control-label">性别:</label>
                <div class="col-sm-10">
                    <input type="radio" name="sex" ng-value="true" ng-model="Sex">男
                    <input type="radio" name="sex" ng-value="false" ng-model="Sex">女
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="col-sm-2 control-label">生日:</label>
                <div class="col-sm-10" style="width:280px;">
                    <div class="input-group" style="width:241px">
                        <input type="text" class="form-control" uib-datepicker-popup="{{format}}" ng-model="Birthday" is-open="popup1.opened" ng-required="true" close-text="关闭"
                               clear-text="清空" current-text="今天" alt-input-formats="altInputFormats" ng-click="open1()" style="width:240px;padding-right:0px;margin:0px;float:left;" />
                        <span class="input-group-btn" style="padding:0px;border:0px;position:absolute;right:1px; margin:0px;z-index:99;">
                            <button type="button" class="btn btn-info" ng-click="open1()"><i class="glyphicon glyphicon-calendar" style="z-index:1;"></i></button>
                        </span>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="col-sm-2 control-label">电话:</label>
                <div class="col-sm-10" style="width:325px;">
                    <input type="text" class="form-control" ng-model="PhoneNumber" placeholder="电话">
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="col-sm-2 control-label">住址:</label>
                <div class="col-sm-10" style="width:325px;">
                    <input type="text" class="form-control" ng-model="Address" placeholder=住址>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="col-sm-2 control-label">相片:</label>
                <div style="height:60px;"></div>
                <div class="col-sm-10" style="width:600px;">
                    <label style="float:right;">
                        <img ng-src="/UploadImage/{{Picture}}"  style="height:180px;width:280px;" />
                    </label>
                    <input type="file" nv-file-select uploader="uploader" multiple accept="image/*"
                           style="border: 3px solid #808080;border-radius:3px;background-color:lightgray;" onchange='angular.element(this).scope().fileChanged(this)'>
                    <button ng-click="SubmitEdit()" class="btn btn-info" style="width:120px;margin-left:60px;margin-top:120px;">提交</button>
                </div>
                
            </div>
        </form>
        <br />
        <br />
    </div>
</div>
