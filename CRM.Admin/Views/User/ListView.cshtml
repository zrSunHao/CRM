
@{
    ViewBag.Title = "ListUser";
}
@section scripts{
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Js/ListUser.js"></script>

}
<div>
    <a href="/User/RedictAddView" class="btn" style="float:right;font-size:20px;">添加用户</a>
    <h1>用户管理系统1.2.0</h1>
</div>
<hr />
<body ng-app="listApp">
    <div ng-controller="userCtrl">
        <div>
            <div class="input-group form-group">
                <input type="text" name="name" ng-model="name" class="class=" form-control"" style="float:right; border-color:darkturquoise;border-width:2px;height:35px;" />
                <span class="input-group-btn">
                    <button ng-click="FindUser(name)" class="btn btn-primary" >查询</button>
                </span>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>姓名</th>
                        <th>性别</th>
                        <th>地址</th>
                        <th>编辑</th>
                        <th>删除</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="user in Users">
                        <td>{{ user.Name }}</td>
                        <td ng-show="{{ user.Sex }}">男</td>
                        <td ng-hide="{{ user.Sex }}">女</td>
                        <td>{{ user.Address }}</td>
                        <td>
                            <a href="/User/RedirectEditView?Id={{user.Id}}">编辑</a>
                        </td>
                        <td>
                            <button class="btn" ng-click="deleteUser(user.Id)">
                                <span class="glyphicon glyphicon-pencil"></span>删除
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="am-cf" ng-show="showPage" style="float:right;bottom:50px;">
            <a href="javascript:;" ng-click="prevPage()" class="btn">上一页</a>
            <a href="javascript:;" ng-click="nextPage()" class="btn">下一页</a>
            共 {{dataNum}} 条记录---当前第 {{currentPage+1}} 页---共 {{pages}} 页
        </div>
    </div>

</body>


